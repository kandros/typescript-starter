{
  "compilerOptions": {
    "lib": [
      "es2015"
    ],
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es6",
    "outDir": "lib",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true,
    "strictNullChecks": true
  },
  "exclude": [
    "node_modules",
    "lib-esm",
    "lib",
    "tests",
    "scripts"
  ]
}